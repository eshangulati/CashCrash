{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: 'BudgetView',\n  data() {\n    return {\n      user_id: localStorage.getItem('user_id'),\n      budgets: [],\n      showAddModal: false,\n      showEditModal: false,\n      showExceedanceModal: false,\n      newBudget: {\n        user_id: localStorage.getItem('user_id'),\n        category: '',\n        allowance: 0,\n        amountSpent: 0\n      },\n      currentBudget: {},\n      exceedanceMessage: ''\n    };\n  },\n  created() {\n    this.fetchBudgets();\n  },\n  methods: {\n    fetchBudgets() {\n      axios.get('http://localhost/budget.php', {\n        params: {\n          user_id: this.user_id\n        }\n      }).then(response => {\n        this.budgets = response.data;\n        console.log(this.budgets);\n        this.checkBudgetExceedance();\n      }).catch(error => {\n        console.error(error);\n      });\n    },\n    createBudget() {\n      axios.post('http://localhost/budget.php', this.newBudget).then(() => {\n        this.fetchBudgets();\n        this.showAddModal = false;\n        this.resetNewBudget();\n      }).catch(error => {\n        console.error(error);\n      });\n    },\n    editBudget(budget) {\n      this.currentBudget = {\n        ...budget\n      };\n      this.showEditModal = true;\n    },\n    deletebudget(budgetId) {\n      return axios.delete('http://localhost/budget.php', {\n        data: {\n          id: budgetId\n        }\n      }).then(() => {\n        this.fetchBudgets();\n      }).catch(error => {\n        console.error(error);\n      });\n    },\n    updateTransaction() {\n      return axios.put('http://localhost/budget.php', this.currentBudget).then(() => {\n        this.fetchBudgets();\n        this.showEditModal = false;\n      }).catch(error => {\n        console.error(error);\n      });\n    },\n    resetNewBudget() {\n      this.newBudget = {\n        user_id: localStorage.getItem('user_id'),\n        category: '',\n        limit: 0,\n        amountSpent: 0\n      };\n    },\n    checkBudgetExceedance() {\n      this.exceedanceMessage = ''; // Reset the message each time we check\n      this.budgets.forEach(budget => {\n        if (parseFloat(budget.amountSpent) > parseFloat(budget.allowance)) {\n          this.exceedanceMessage += `Amount spent exceeded budget for ${budget.category}. `;\n          this.showExceedanceModal = true; // Show the message or modal\n        }\n      });\n    },\n    progressStyle(budget) {\n      const percentage = budget.amountSpent / budget.allowance * 100;\n      return {\n        width: `${Math.max(-100, Math.min(percentage, 100))}%`,\n        backgroundColor: percentage > 100 ? '#ff6f61' : '#4dd0e1'\n      };\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","user_id","localStorage","getItem","budgets","showAddModal","showEditModal","showExceedanceModal","newBudget","category","allowance","amountSpent","currentBudget","exceedanceMessage","created","fetchBudgets","methods","get","params","then","response","console","log","checkBudgetExceedance","catch","error","createBudget","post","resetNewBudget","editBudget","budget","deletebudget","budgetId","delete","id","updateTransaction","put","limit","forEach","parseFloat","progressStyle","percentage","width","Math","max","min","backgroundColor"],"sources":["/Users/eshangulati/Documents/GitHub/eshangulati.github.io/my-app/src/components/BudgetPage.vue"],"sourcesContent":["<template>\n    <div class=\"budget-container\">\n      <header class=\"budget-header\">\n        <h1>Budget</h1>\n        <nav class=\"nav-buttons\">\n            <router-link :to=\"`/dashboard/${user_id}`\">\n                <button class=\"nav-button\">Dashboard</button>\n            </router-link>\n          <router-link :to=\"`/transaction/${user_id}`\">\n            <button class=\"nav-button\">Transactions</button>\n          </router-link>\n          <router-link :to=\"`/savings/${user_id}`\">\n            <button class=\"nav-button\">Savings</button>\n          </router-link>\n          <router-link :to=\"`/reports/${user_id}`\">\n            <button class=\"nav-button\">Reports</button>\n          </router-link>\n        </nav>\n        \n      </header>\n      <button @click=\"showAddModal = true\" class=\"nav-button\">Add Budget</button>\n      <main>\n        <div>\n          <div v-for=\"budget in budgets\" :key=\"budget.id\" class=\"budget-item\">\n            <h3>{{ budget.category }}</h3>\n            <div class=\"progress-container\" :class=\"{'alert': budget.amountSpent >= budget.limit}\">\n            <div class=\"progress-bar\"  :style=\"progressStyle(budget)\" >\n              <span>${{ budget.amountSpent }} out of ${{ budget.allowance }}</span>\n            </div>\n            </div>\n            <br>\n            <div>\n                <button @click=\"editBudget(budget)\" class=\"function_button\">Edit</button>\n                <button @click=\"deletebudget(budget.id)\" class=\"function_button\">Delete</button>\n            </div>\n          </div>\n        </div>\n        <div v-if=\"showExceedanceModal\" class=\"modal\">\n            <div class=\"modal-content\">\n                <h2>Budget Exceeded Warning</h2>\n                <p>{{ exceedanceMessage }}</p>\n                <button @click=\"showExceedanceModal = false\">Close</button>\n            </div>\n        </div>\n      </main>\n  \n      <div v-if=\"showAddModal\" class=\"modal\">\n        <div class=\"modal-content\">\n          <h2>Add Budget</h2>\n          <form @submit.prevent=\"createBudget\">\n            <select v-model=\"newBudget.category\" required>\n              <option disabled value=\"\">Select Category</option>\n              <option value=\"Grocery\">Grocery</option>\n              <option value=\"Entertainment\">Entertainment</option>\n              <option value=\"Shopping\">Shopping</option>\n              <option value=\"Education\">Education</option>\n            </select>\n            <input v-model=\"newBudget.allowance\" type=\"number\" step=\"0.01\" placeholder=\"Budget Allowance\" required />\n            <button type=\"submit\">Add</button>\n            <button type=\"button\" @click=\"showAddModal = false\">Cancel</button>\n          </form>\n        </div>\n      </div>\n\n      <div v-if=\"showEditModal\" class=\"modal\">\n        <div class=\"modal-content\">\n            <h2>Edit Buddget</h2>\n            <form @submit.prevent=\"updateBudget\">\n                <input v-model=\"currentBudget.allowance\" type=\"number\" step=\"0.01\" placeholder=\"Budget Allowance\" required />\n                <button @click=\"updateBudget()\">Update</button>\n                <button type=\"button\" @click=\"showEditModal = false\">Cancel</button>\n            </form>\n        </div>\n      </div>\n    </div>\n  </template>\n  \n  <script>\n  import axios from 'axios';\n  \n  export default {\n    name: 'BudgetView',\n    data() {\n      return {\n        user_id: localStorage.getItem('user_id'),\n        budgets: [],\n        showAddModal: false,\n        showEditModal: false,\n        showExceedanceModal: false,\n        newBudget: {\n          user_id: localStorage.getItem('user_id'),\n          category: '',\n          allowance: 0,\n          amountSpent: 0\n        },\n        currentBudget: {},\n        exceedanceMessage: ''\n      };\n    },\n    created() {\n      this.fetchBudgets();\n    },\n    methods: {\n      fetchBudgets() {\n        axios.get('http://localhost/budget.php', {\n          params: {\n            user_id: this.user_id\n          }\n        })\n        .then(response => {\n          this.budgets = response.data;\n          console.log(this.budgets);\n          this.checkBudgetExceedance();\n        })\n        .catch(error => {\n          console.error(error);\n        });\n      },\n      createBudget() {\n        axios.post('http://localhost/budget.php', this.newBudget)\n        .then(() => {\n          this.fetchBudgets();\n          this.showAddModal = false;\n          this.resetNewBudget();\n        })\n        .catch(error => {\n          console.error(error);\n        });\n      },\n      editBudget(budget){\n        this.currentBudget = {...budget}\n        this.showEditModal = true\n      },\n      deletebudget(budgetId) {\n        return axios.delete('http://localhost/budget.php', { data: { id: budgetId } })\n          .then(() => {\n            this.fetchBudgets();\n          })\n          .catch(error => {\n            console.error(error);\n          });\n      },\n      updateTransaction() {\n        return axios.put('http://localhost/budget.php', this.currentBudget)\n          .then(() => {\n            this.fetchBudgets();\n            this.showEditModal = false;\n          })\n          .catch(error => {\n            console.error(error);\n          });\n      },\n      resetNewBudget() {\n        this.newBudget = {\n          user_id: localStorage.getItem('user_id'),\n          category: '',\n          limit: 0,\n          amountSpent: 0\n        };\n      },\n      checkBudgetExceedance() {\n        this.exceedanceMessage = '';  // Reset the message each time we check\n        this.budgets.forEach(budget => {\n            if (parseFloat(budget.amountSpent) > parseFloat(budget.allowance)) {\n            this.exceedanceMessage += `Amount spent exceeded budget for ${budget.category}. `;\n            this.showExceedanceModal = true;  // Show the message or modal\n      }\n        });\n    },\n    progressStyle(budget) {\n      const percentage = (budget.amountSpent / budget.allowance) * 100;\n      return {\n        width: `${Math.max(-100, Math.min(percentage, 100))}%`,\n        backgroundColor: percentage > 100 ? '#ff6f61' : '#4dd0e1'\n      };\n    },\n    }\n    \n  };\n  </script>\n  \n  <style scoped>\n  .budget-container {\n    padding: 20px;\n  }\n  \n  .budget-header {\n    display: flex;\n    justify-content: space-between;\n    align-items: center;\n    flex-wrap: wrap; /* Allow header elements to wrap on smaller screens */\n  }\n  \n  .nav-buttons button {\n    margin: 5px;\n    flex-grow: 1; /* Ensure buttons expand to fill space */\n  }\n  \n  .budget-item {\n    margin: 20px;\n    padding: 10px;\n    background-color: #f9f9f9;\n    border: 1px solid #ccc;\n    border-radius: 10px;\n  }\n  \n  .budget-item h3 {\n    margin-top: 0;\n  }\n  \n  .progress-container {\n    width: 100%;\n    height: 20px;\n    background-color: #ddd;\n    border-radius: 10px;\n    overflow: hidden;\n    position: relative;\n  }\n  \n  .progress-bar {\n    height: 100%;\n    background-color: #4dd0e1;\n    border-radius: 10px;\n    transition: width 0.5s ease;\n    font-size: 12px;\n  }\n  \n  .nav-button, .function_button, .add-budget-button {\n    padding: 10px 20px;\n    border: none;\n    border-radius: 10px;\n    background-color: #4dd0e1;\n    color: white;\n    cursor: pointer;\n    font-size: 16px;\n    transition: background-color 0.3s;\n  }\n  \n  .nav-button:hover, .function_button:hover, .add-budget-button:hover {\n    background-color: #26c6da;\n  }\n  \n  .modal {\n    position: fixed;\n    top: 0;\n    left: 0;\n    width: 100%;\n    height: 100%;\n    background: rgba(0, 0, 0, 0.5);\n    display: flex;\n    align-items: center;\n    justify-content: center;\n  }\n  \n  .modal-content {\n    background: white;\n    padding: 20px;\n    border-radius: 5px;\n    width: 90%; /* Ensures modal content is not too wide on small devices */\n  }\n  \n  /* Media Queries for smaller devices */\n  @media (max-width: 768px) {\n    .nav-buttons button {\n      width: 100%; /* Full width for better accessibility on smaller screens */\n      margin-top: 5px;\n    }\n  \n    .budget-item, .modal-content {\n      width: 100%; /* Full width to use available space */\n      margin: 10px 0;\n    }\n  \n    .function_button, .add-budget-button {\n      width: auto; /* Allow buttons to grow with the text */\n      padding: 8px 16px;\n    }\n  \n    .function_button, .nav-button, .add-budget-button {\n      font-size: 12px; /* Smaller font size for better fit */\n    }\n  }\n  \n  @media (max-width: 480px) {\n    .budget-header {\n      flex-direction: column;\n    }\n  \n    .progress-container, .progress-bar {\n      height: 15px; /* Smaller progress bars for less vertical space usage */\n    }\n  }\n  </style>\n  "],"mappings":"AA8EE,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAEC,YAAY,CAACC,OAAO,CAAC,SAAS,CAAC;MACxCC,OAAO,EAAE,EAAE;MACXC,YAAY,EAAE,KAAK;MACnBC,aAAa,EAAE,KAAK;MACpBC,mBAAmB,EAAE,KAAK;MAC1BC,SAAS,EAAE;QACTP,OAAO,EAAEC,YAAY,CAACC,OAAO,CAAC,SAAS,CAAC;QACxCM,QAAQ,EAAE,EAAE;QACZC,SAAS,EAAE,CAAC;QACZC,WAAW,EAAE;MACf,CAAC;MACDC,aAAa,EAAE,CAAC,CAAC;MACjBC,iBAAiB,EAAE;IACrB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,YAAY,CAAC,CAAC;EACrB,CAAC;EACDC,OAAO,EAAE;IACPD,YAAYA,CAAA,EAAG;MACbjB,KAAK,CAACmB,GAAG,CAAC,6BAA6B,EAAE;QACvCC,MAAM,EAAE;UACNjB,OAAO,EAAE,IAAI,CAACA;QAChB;MACF,CAAC,EACAkB,IAAI,CAACC,QAAO,IAAK;QAChB,IAAI,CAAChB,OAAM,GAAIgB,QAAQ,CAACpB,IAAI;QAC5BqB,OAAO,CAACC,GAAG,CAAC,IAAI,CAAClB,OAAO,CAAC;QACzB,IAAI,CAACmB,qBAAqB,CAAC,CAAC;MAC9B,CAAC,EACAC,KAAK,CAACC,KAAI,IAAK;QACdJ,OAAO,CAACI,KAAK,CAACA,KAAK,CAAC;MACtB,CAAC,CAAC;IACJ,CAAC;IACDC,YAAYA,CAAA,EAAG;MACb5B,KAAK,CAAC6B,IAAI,CAAC,6BAA6B,EAAE,IAAI,CAACnB,SAAS,EACvDW,IAAI,CAAC,MAAM;QACV,IAAI,CAACJ,YAAY,CAAC,CAAC;QACnB,IAAI,CAACV,YAAW,GAAI,KAAK;QACzB,IAAI,CAACuB,cAAc,CAAC,CAAC;MACvB,CAAC,EACAJ,KAAK,CAACC,KAAI,IAAK;QACdJ,OAAO,CAACI,KAAK,CAACA,KAAK,CAAC;MACtB,CAAC,CAAC;IACJ,CAAC;IACDI,UAAUA,CAACC,MAAM,EAAC;MAChB,IAAI,CAAClB,aAAY,GAAI;QAAC,GAAGkB;MAAM;MAC/B,IAAI,CAACxB,aAAY,GAAI,IAAG;IAC1B,CAAC;IACDyB,YAAYA,CAACC,QAAQ,EAAE;MACrB,OAAOlC,KAAK,CAACmC,MAAM,CAAC,6BAA6B,EAAE;QAAEjC,IAAI,EAAE;UAAEkC,EAAE,EAAEF;QAAS;MAAE,CAAC,EAC1Eb,IAAI,CAAC,MAAM;QACV,IAAI,CAACJ,YAAY,CAAC,CAAC;MACrB,CAAC,EACAS,KAAK,CAACC,KAAI,IAAK;QACdJ,OAAO,CAACI,KAAK,CAACA,KAAK,CAAC;MACtB,CAAC,CAAC;IACN,CAAC;IACDU,iBAAiBA,CAAA,EAAG;MAClB,OAAO